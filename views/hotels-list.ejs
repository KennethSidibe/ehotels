<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotels-list</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/hotels-list.css">
    <link rel="stylesheet" href="styles/hotels-list-page.css">
    
    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Calistoga&family=Kantumruy+Pro:ital,wght@0,100..700;1,100..700&family=Martian+Mono:wght@100..800&family=Sorts+Mill+Goudy:ital@0;1&display=swap" rel="stylesheet">
    <!-- End fonts -->
    
    <style>
        ol.gradient-list > li::before {
          content: attr(data-content);
        }
      </style>
</head>

<body>
  
    <main>
      <h2 class="fw-bold" >SÃ©jour: <%= data.stay %></h2>
        <ol class="gradient-list">
          <% data.forEach(function(hotel, index) { %>
          
          <li data-content="<%= hotel.chainIcon %>">

            <div class="row mb-2">

              <div class="col d-flex flex-column">
                <div class="col mt-3">
                    <div class="col"> <a href="#" class="hotel-name"><%= hotel.name %></a></div>
                </div>
                <div class=" d-flex flex-row col my-3">
                  <!-- links to google map city location  -->
                    <div class="col location-type"><a href="#" class="link-secondary link-underline-opacity-25 link-opacity-50-hover" >
                      <%= hotel.locationShort %></a>
                    </div>
                    <div class="col-4 location-type"><a href="#" class="link-secondary link-underline-opacity-25 link-opacity-50-hover">
                      <%= hotel.category %></a>
                    </div>
                </div>
              </div>

              <div class="col-3 d-flex justify-content-center align-items-center">
                <h1><%= hotel.categoryIcon %></h1>
              </div>

            </div>


            <div class="row">

              <div class="col-6">
                <img src="/images/blog2.jpg" class="img-fluid rounded-4" alt="">
              </div>
                <div class="col-6 d-flex flex-column-reverse">
                  <div class="row d-flex flex-column">

                    <div class="col d-flex justify-content-end price my-1"><div class="me-3"><%= hotel.price %>$</div></div>
                    <div class="col d-flex justify-content-end mt-2">
                      <a href="/hotel-rooms?id=<%= index %>"><button class="btn btn-primary">< Voir les chambres</button></a> 
                    </div>

                  </div>
                </div>
            </div>
            
        </li>

        <% }) %>

        </ol>
      </main>    
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>


</html>