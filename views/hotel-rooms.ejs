<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Clerk Book Room</title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="styles/rooms-list.css" />
    <!-- Boostrap -->

    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Calistoga&family=Kantumruy+Pro:ital,wght@0,100..700;1,100..700&family=Martian+Mono:wght@100..800&family=Sorts+Mill+Goudy:ital@0;1&display=swap"
      rel="stylesheet"
    />
    <!-- End fonts -->

    <!-- Boostrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <!-- Boostrap Icons -->

    <style>
      body {
        background-color: #eff3f7;
      }
      .rounded-container {
        background-color: #ffffff;
      }
      .price {
        font-family: "Martian Mono", monospace;
        font-optical-sizing: auto;
        font-weight: 300;
        font-style: normal;
        font-variation-settings: "wdth" 100;
      }

      .card-room {
        position: relative;
        transition: border 0.4s ease-in-out; /* Adds a transition effect to the filter property */
      }
      
      .icon-container {
        position: absolute;
        bottom: 10px;
        right: 10px;
      }
      .hide {
        display: none;
      }
      .blur {
        filter: blur(5px);
      }
      .card-image {
        overflow: hidden;
      }
    </style>
  </head>
  <body>
    <div class="container w-75">

      <div class="container w-50 mt-3">
        
      </div>


        
        <div class="col">
          <!-- Profile Info -->
          <div class="container my-4 p-4 rounded-container rounded-4">
            <div class="row">
              <div class="d-flex flex-row gap-2 mb-2">
                <p><i class="bi bi-arrow-left"></i></p>
                <h5 class="text-primary "><a href="/hotel-adm">Retour au profil</a></h5>
                </div>
            </div>
            <!--  -->
            <div class="mb-5 d-flex flex-row">
              <div class="row">
                <h3 class="mb-0"><%= data.hotel.hotel_name %> Chambre</h3>
                <p class="text-body-tertiary">Chaîne d'hôtel : <%= data.hotel_chain.hotel_chain_name %></p>
              </div>
            </div>
            <!--  -->

            <!-- Rooms card -->
            <div class="container rooms-card">
              
              <h3 style="margin-bottom: 0.7em">Chambres</h3>
              <div class="row row-cols-3 gy-3">

                <% rooms.forEach((room, index) => { %>

                  <div class="col">
                    <div class="card card-room not-clicked">
                      <img
                        src="images/room1.jpg"
                        class="card-img-top img-fluid"
                        alt="..."
                      />
                      <div class="card-body">
                        <h5 class="card-title"><%= room.room_name %></h5>
                        <p>Nombre : <span class="room-number" ><%= room.number_of_rooms_for %></span></p>
                        <p class="price text-primary"><span class="price-digit" ><%= room.price %>$</span>/Nuit</p>
                        <a href="/hotel-edit-room?id=<%= index %>"><button class="btn btn-primary">Modifier la chambre</button></a>
                      </div>
                    </div>
                  </div>

                <% }) %>

                <!-- Add Room Btn -->
                <div class="col">
                  <div class="card card-room text-bg-success" id="add-room-card">
                    <div class="card-image">
                        <img
                          src="images/room1.jpg"
                          class="card-img-top img-fluid blur"
                          alt="..."
                        />
                    </div>
                    <div class="card-body">
                      <h5 class="card-title">Nom de la chambre</h5>
                      <p>Nombre : <span class="room-number" >##</span></p>
                      <p class="price "><span class="price-digit" >250$</span>/Nuit</p>
                      <a href="/hotel-add-room"><button class="btn btn-light" >Ajouter une chambre</button></a>
                    </div>
                  </div>
                </div>
                <!-- Add Room Btn -->

              </div>
            </div>
            <!-- Rooms Card -->
    </div>

    <!-- JQuery CDN -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <!-- JQuery CDN -->

    <!-- Page Script -->
    <script src="js/clerk-book-room-script.js"></script>
    <!-- Page Script -->
  </body>
</html>
